{
  "name": "eristic-backend",
  "version": "1.0.0",
  "description": "Eristic Backend API with LLM integration",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec 'ts-node -r tsconfig-paths/register src/server.ts'",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "test": "echo 'Tests not implemented yet. Run this command to run backend tests.'",
    "clean": "rm -rf dist",
    "db:init": "ts-node -r tsconfig-paths/register src/database/scripts/init-database.ts",
    "db:migrate": "ts-node -r tsconfig-paths/register src/database/migrations/migration-runner.ts",
    "db:seed": "ts-node -r tsconfig-paths/register src/database/seeds/seed-runner.ts",
    "db:backup": "ts-node -r tsconfig-paths/register src/database/scripts/backup-database.ts",
    "db:migrate-localstorage": "ts-node -r tsconfig-paths/register src/database/scripts/migrate-from-localstorage.ts"
  },
  "keywords": [
    "api",
    "backend",
    "nodejs",
    "typescript",
    "eristic",
    "llm",
    "ollama"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
